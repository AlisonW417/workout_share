<h1><%= @workout.name %> Summary </h1>
<h2>Logged by: <%= @workout.user.username %></h2>
<ul>
    <li> 
        Date: <%= @workout.date_completed %>
    </li>

    <li>
        Duration: <%= @workout.duration %>
    </li>

    <li>
        Cardio? <%= @workout.cardio %>
    </li>

    <li>
        Strength? <%= @workout.strength %>
    </li>

    <li>
        Average Heart Rate (bpm): <%= @workout.average_heart_rate %>
    </li>

    <li>
        Total Calories Burned: <%= @workout.total_calories %> 
    </li>

    <li>
        Description: <%= @workout.description %> 
    </li>
</ul>

<%= form_for @comment do |f| %>
    <%= f.label :description, "Comment on this workout" %>
    <%= f.text_area :description %>
<% end %>

<p><%= link_to 'Edit Workout', edit_workout_path %></p>
<p><%= link_to 'Delete Workout', workout_path(@workout), method: 'delete' %></p>
