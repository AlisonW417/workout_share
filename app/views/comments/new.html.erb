<%= display_header(@comment) %>

<%= render partial: 'layouts/errors', locals: {obj: @comment} %>

<%= form_for @comment do |f| %>
    <%= f.label :description, "Leave a comment" %><br>
    <%= f.text_area :description %><br>

    <%= f.hidden_field :workout_id %>

    <%= f.submit "Submit" %>
<% end %>