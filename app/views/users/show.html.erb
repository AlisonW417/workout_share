<h1><%= @user.username %>'s Workouts</h1>

<% @workouts.each do |workout| %>
    <p><strong><%= workout.name %></strong></p>
    <p><%= workout.date_completed %></p>
    <p><%= link_to 'View Workout Details', workout_path(workout) %></p><br>
<% end %>

<h5>Stats</h5>
<ul>
    <li><%= @user.calories_burned %> calories burned</li>
    <li><%= @user.minutes_exercised %> minutes exercised</li>
    <li><%= @user.workouts_logged %> workouts logged</li>
</ul>
